# Local Development Environment Variables
# Copy this file to application.yaml and fill in your LOCAL credentials
# NEVER commit application.yaml to Git!

server:
  port: 8080
  servlet:
    context-path: /api

spring:
  datasource:
    url: jdbc:mysql://YOUR_LOCAL_MYSQL_HOST:3306/quanh
    driverClassName: com.mysql.cj.jdbc.Driver
    username: YOUR_DB_USERNAME
    password: YOUR_DB_PASSWORD
  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true
  servlet:
    multipart:
      max-file-size: 10MB
      max-request-size: 10MB
    open-in-view: false

jwt:
  signerKey: "YOUR_LOCAL_JWT_KEY_MIN_32_CHARS"
  valid-duration: 3600 # in seconds
  refreshable-duration: 36000 # in seconds

mailServer:
  host: smtp.gmail.com
  port: 587
  email: YOUR_EMAIL@gmail.com
  password: YOUR_GMAIL_APP_PASSWORD
  protocol: smtp
  isSSL: false

app:
  client-url: http://localhost:5173
  verification-token-expiry: 24 # hours
  reset-token-expiry: 1 # hours for password reset

vietmap:
  api:
    key: YOUR_VIETMAP_API_KEY
    base-url: https://maps.vietmap.vn/api

aws:
  s3:
    access-key-id: YOUR_S3_ACCESS_KEY
    secret-access-key: YOUR_S3_SECRET_KEY
    bucket-name: YOUR_BUCKET_NAME
    region: ap-southeast-1
    endpoint: YOUR_S3_ENDPOINT
